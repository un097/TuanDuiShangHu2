<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/lxp.panelex.view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
	    	android:id="@+id/shanghulayout1" 
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:gravity="center">
        <TextView 
         	android:text="商户编号："
         	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:paddingRight="20dip"
         	android:gravity="center"
         	android:textSize="@dimen/main"
         	android:textColor="@color/black"/>
    	<TextView
            android:id="@+id/shanghuno1"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/h1"
            android:textColor="@color/gray1"
            android:textSize="@dimen/neirong"/>
    	<TextView 
    	    android:layout_width="40dip"
    	    android:layout_height="wrap_content"
    	    android:gravity="center"/>
    	<Button 
             android:id="@+id/delectbtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/myselector_bt"
             android:textColor="@color/black"
             android:textSize="@dimen/main"
             android:text="删除"/>
    	</LinearLayout>
</LinearLayout>