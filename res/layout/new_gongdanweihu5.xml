<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="店内培训信息"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="培训性质"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <RadioGroup
                    android:id="@+id/group_gongdan5_train"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_gongdan5_train_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:button="@drawable/selector_radiobutton2"
                        android:text="上线培训"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/radio_gongdan5_train_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回访培训"
                        android:button="@drawable/selector_radiobutton2"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </RadioGroup>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:id="@+id/linearlayout_gongdan5_target"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="培训对象"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/check_gongdan5_target_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主管/经理"
                        android:button="@drawable/selector_radiobutton2"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <CheckBox
                        android:id="@+id/check_gongdan5_target_cashier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收银员"
                        android:button="@drawable/selector_radiobutton2"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <CheckBox
                        android:id="@+id/check_gongdan5_target_sericer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务人员"
                        android:button="@drawable/selector_radiobutton2"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_gongdan5_target_beizhu"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearlayout_gongdan5_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="培训内容"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkbox_gongdan5_content_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:button="@drawable/selector_radiobutton2"
                        android:text="商户人员清楚识别本行卡卡样"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <CheckBox
                        android:id="@+id/checkbox_gongdan5_content_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:button="@drawable/selector_radiobutton2"
                        android:text="商户人员清晰了解本行卡在该商户的常规优惠内容"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <CheckBox
                        android:id="@+id/checkbox_gongdan5_content_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:button="@drawable/selector_radiobutton2"
                        android:text="商户人员清楚主动提示优惠信息的规范话述"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <CheckBox
                        android:id="@+id/checkbox_gongdan5_content_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:button="@drawable/selector_radiobutton2"
                        android:text="商户人员清晰了解本行近期与该商户举行的特别优惠活动或服务人员激励活动与具体内容"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_gongdan5_content_beizhu"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_gongdan5_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/b4" />

        <Button
            android:id="@+id/btn_gongdan5_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/b5" />
    </RelativeLayout>

</LinearLayout>