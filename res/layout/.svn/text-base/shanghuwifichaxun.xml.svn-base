<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/lxp.panelex.view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b2" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/LinearLayoutwifi1"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="商户搜索"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="@dimen/title" />
        </RelativeLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="544dp"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_marginLeft="90dip"
            	android:layout_marginRight="60dip"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/yleoutwifi1"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:background="@drawable/layout_short"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
					 <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:text="商户名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main" />

                    <TextView
                        android:id="@+id/yedtextwifi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/g3"
                        android:gravity="center"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/neirong" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    

                    <Button
                        android:id="@+id/buttonwifi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/myselector_bt"
                        android:text="查询"
                        android:textColor="@color/black"
                        android:textSize="@dimen/main" />
                </LinearLayout>
                
            </LinearLayout>
			 <LinearLayout
                android:layout_marginLeft="50dip"
            	android:layout_marginRight="60dip"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
		               
					<TextView 
					   android:layout_width="0dp"
		    			android:layout_weight="1"
					    android:layout_height="fill_parent"
					    android:textSize="20dp"
					    android:gravity="center"
					    android:textColor="@color/black"
					    android:text="商户名称"/>
				   <TextView 
					   android:layout_width="0dp"
		   				 android:layout_weight="1"
					    android:layout_height="fill_parent"
					    android:textSize="20dp"
					    android:gravity="left|center_vertical"
					    android:textColor="@color/black"
					    android:paddingLeft="50dp"
					    android:text="商户地址"/>
			     
               </LinearLayout>
           
            <ListView 
                android:layout_marginLeft="52dip"
           		android:layout_marginRight="29dip"
           		
                android:id="@+id/right_linearLayoutwifi"
                android:layout_width="match_parent"
                android:layout_height="410dip"
                />
            <!-- android:paddingRight="40dip" -->
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content" />

          
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonwifi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myselector_bt"
                android:text="返回"
                android:textColor="@color/black"
                android:textSize="@dimen/main" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>