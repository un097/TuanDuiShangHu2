<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="开始定位"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="180dp"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="定位信息"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


                <Button android:id="@+id/btn_gps_new_gongdanweihu1"
                    android:layout_width="wrap_content"
                    android:text="GPS定位"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:background="@drawable/myselector_bt"
                    android:layout_height="fill_parent"
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="经度"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/tv_gongdan1_jing"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="纬度"
                    android:textColor="@color/black"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/tv_gongdan1_wei"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_gongdan1_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/b4" />

        <Button
            android:id="@+id/btn_gongdan1_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/b5" />
    </RelativeLayout>

</LinearLayout>