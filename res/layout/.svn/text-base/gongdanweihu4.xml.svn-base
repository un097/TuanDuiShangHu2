 -->

        <ListView
            android:id="@+id/imageList"
            android:layout_width="220dp"
            android:layout_height="454dp"
            android:layout_weight="1"
            android:layout_x="739dp"
            android:layout_y="128dp"
            android:divider="#00000000"
            android:fadeScrollbars="true" >
        </ListView>
        
	        
	            <LinearLayout 
	                android:id="@+id/choosePicLayout"
	            	android:layout_width="wrap_content"
	           	 	android:layout_height="540dp"
	            	android:orientation="vertical"
	            	>
			        <LinearLayout 
			            
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal"           	
			            android:paddingLeft="100dp"
			            android:paddingTop="30dp">
				       	<TextView 
				       	   	android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				            
				            android:text="选择图片"
				            android:textColor="@color/black"
				            android:textSize="@dimen/title"
				            android:layout_gravity="center"/>
				       	<TextView 
				       	    android:id="@+id/choosePicTxt"
				       	    android:layout_width="300dp"
				            android:layout_height="wrap_content" 
				            android:layout_gravity="center"
				            android:text=""
				            android:textColor="@color/black"
				            android:textSize="@dimen/title"
				            android:background="@drawable/myselector_changbt"
				            android:clickable="true"
				            android:gravity="center"
				            android:layout_marginLeft="20dp"
				            />
				       	<Button 
				       	    android:id="@+id/addPicture"
				       	    android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="20dp"
				            android:background="@drawable/myselector_bt"
				            android:text="添加"
				            android:textColor="@color/black"
				            android:textSize="@dimen/title"
				            android:layout_gravity="center"/>
			       	</LinearLayout>
			       	<ScrollView 
	            		android:layout_width="fill_parent"
	            		android:layout_height="fill_parent"
	            		android:orientation="vertical">
				       	<LinearLayout 
				       	    android:id="@+id/addChoosePicLayout"
				       	    android:layout_width="wrap_content"
			            	android:layout_height="wrap_content"
			            	android:orientation="vertical">
				       	    
				       	</LinearLayout>
					</ScrollView>
	       	</LinearLayout>
	       	
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="198dp"
            android:layout_y="538dp"
            android:background="@drawable/myselector_bt"
            android:text="保存草稿箱"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="378dp"
            android:layout_y="538dp"
            android:background="@drawable/myselector_bt"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="554dp"
            android:layout_y="538dp"
            android:background="@drawable/myselector_bt"
            android:text="提交"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <Button
            android:id="@+id/takephoto1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_x="324dp"
            android:layout_y="155dp"
            android:background="@drawable/myselector_changbt"
            android:text="收银台卡/跳跳卡拍摄(必选)"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:visibility="gone" />

        <Button
            android:id="@+id/takephoto2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_x="324dp"
            android:layout_y="217dp"
            android:background="@drawable/myselector_changbt"
            android:text="海报/宣传贴拍摄(必选)"
            android:textColor="@color/black"
            android:textSize="@dimen/title" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/takephoto4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_x="324dp"
            android:layout_y="282dp"
            android:background="@drawable/myselector_changbt"
            android:text="易拉宝/X展架拍摄(可选)"
            android:textColor="@color/black"
            android:textSize="@dimen/title" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/takephoto5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_x="324dp"
            android:layout_y="352dp"
            android:background="@drawable/myselector_changbt"
            android:text="门贴/其他拍摄(可选)"
            android:textColor="@color/black"
            android:textSize="@dimen/title" 
            android:visibility="gone"/>

    </AbsoluteLayout>

</LinearLayout>